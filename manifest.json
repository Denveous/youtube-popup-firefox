{
  "manifest_version": 2,
  "name": "YouTube Embed Redirector",
  "author": "bakkouz",
  "version": "1.0",
  "description": "Redirects YouTube watch URLs to their embed versions",
  "permissions": [
    "webNavigation",
    "tabs",
    "*://*.youtube.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}